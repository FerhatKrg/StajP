@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
	ViewData["Title"] = "RoleList";
	Layout = "~/Views/UserLayout/Index.cshtml";
	int count = 0;
}

<div class="form-element-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-element-list">
					<div class="basic-tb-hd">
						<h2>Role Listesi Sayfası</h2>

					</div>
				 
						<div class="row">

							<table class="table table-bordered">
								<tr>
									<th>#</th>
									<th>Rol Adı</th>
									<th>Rol Sil</th>
									<th>Rol Güncelle</th>
								</tr>
								@foreach(var i in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@i.Name</td>
									<td><a href="/Role/DeleteRole/@i.Id/" class="btn btn-danger">Sil</a></td>
									<td><a href="/Role/UpdateRole/@i.Id/" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</table>
							<a href="/Role/CreateRole" class="btn btn-primary"> Yeni Rol Girişi </a>
						</div>
					 
				</div>
			</div>
		</div>

	</div>
</div>


@model List<AppUser>
@{
	ViewData["Title"] = "UserList";
	Layout = "~/Views/UserLayout/Index.cshtml";
	int count = 0;
}

<div class="form-element-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-element-list">
					<div class="basic-tb-hd">
						<h2>Kullanıcı Listesi Sayfası</h2>

					</div>

					<div class="row">

						<table class="table table-hover">
							<tr>
								<th>#</th>
								<th>Ad Soyad</th>
								<th>Kullanıcı Adı</th>
								<th>Kullanıcı Email</th>
								<th>Kullanıcı Durum</th>
								 
							</tr>
							@foreach (var i in Model)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>@i.Name @i.Surname</td>
									<td>@i.UserName</td>
									<td>@i.Email</td>
									
									<td>
										@if (i.IsActive)
										{
											<a href="/User/DeActivateUserAccount/@i.Id/" class="btn btn-warning">Pasif Yap</a>
										}
										else
										{
											<a href="/User/ActivateUserAccount/@i.Id/" class="btn btn-primary">Aktif Yap</a>
										}

									</td>

								</tr>
							}
						</table>

					</div>

				</div>
			</div>
		</div>

	</div>
</div>

@using Microsoft.AspNetCore.Identity
@model List<Comment>
@{
	ViewData["Title"] = "CommentList";
	Layout = "~/Views/UserLayout/Index.cshtml";
	int count = 0;
}

<div class="form-element-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-element-list">
					<div class="basic-tb-hd">
						<h2>Yorum Listesi Sayfası</h2>

					</div>

					<div class="row">

						<table class="table table-bordered">
							<tr>
								<th>#</th>
								<th>Kullanıcı Adı</th>
								<th>Yorum</th>
								<th>Durum</th>
								<th>Yorum Sil</th>
								<th>Toksik</th>
								<th>Pasife Çek</th>
								<th>Yorumu Onayla</th>
								
							</tr>
							@foreach (var i in Model)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>@i.AppUser.Name @i.AppUser.Surname</td>
									<td>@i.CommentDetail</td>
									<td>@i.CommentStatus</td>
									<td><a href="/Comment/DeleteComment/@i.CommentId/" class="btn btn-danger">Sil</a></td>
									<td><a href="/Comment/CommentStatusChangeToToxic/@i.CommentId/" class="btn btn-info">Toksik</a></td>
									<td><a href="/Comment/CommentStatusChangeToPassive/@i.CommentId/" class="btn btn-warning">Pasif Yap</a></td>
									<td><a href="/Comment/CommentStatusChangeToActive/@i.CommentId/" class="btn btn-primary">Onayla</a></td>
								</tr>
							}
						</table>
						
					</div>

				</div>
			</div>
		</div>

	</div>
</div>

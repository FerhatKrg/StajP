@using Microsoft.AspNetCore.Identity
@model List<Category>

@{
	ViewData["Title"] = "CategoryList";
	Layout = "~/Views/UserLayout/Index.cshtml";
	int count = 0;
}




<div class="form-element-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-element-list">
					<div class="basic-tb-hd">
						<h2>Kategori Listesi Sayfası</h2>

					</div>

					<div class="row">

						<table class="table table-bordered">
							<tr>
								<th>#</th>
								<th>Kategori Adı</th>
								<th>Sil</th>
								<th>Güncelle</th>



							</tr>
							@foreach (var i in Model)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>@i.CategoryName</td>
									<td>@i.CategoryStatus</td>
									<td>@i.CategoryStatus</td>
									<td>
										<a href="/Category/DeleteCategory/@i.CategoryId/"
										   class="btn btn-danger"
										   onclick="return confirm('Silmek istediğinizden emin misiniz?');">
											Sil
										</a>
									</td>

									<td><a href="/Category/UpdateCategory/@i.CategoryId/" class="btn btn-success">Güncelle</a></td>
								</tr>
							}
						</table>
						<a href="/Category/CrreateCategory/" class="btn btn-success">Yeni Kategori Girişi</a>
					</div>

				</div>
			</div>
		</div>

	</div>
</div>
